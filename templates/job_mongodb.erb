  ##
  # MongoDB [Database]
  #
  database MongoDB do |db|
    db.name = "<%= @dbname %>"
    <% if @username -%>
      db.username = "<%= @username %>"
      db.password = "<%= @password %>"
    <% end -%>
    db.host = "<%= @dbhost %>"
    db.port = "<%= @port %>"
    db.lock = <%= @lock %>
  end
